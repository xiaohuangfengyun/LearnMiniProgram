<!--components/w-swiper/w-swiper.wxml-->
<swiper class="swiper" indicator-dots indicator-active-color="#ff5777" circular autoplay interval="3000">
  <block wx:for='{{list}}' wx:key='index'>
    <swiper-item class="swiper-item">
      <image class="swiper-item-image" src="{{item.image}}" mode="widthFix"/>
    </swiper-item>
  </block>
</swiper>
