<!--pages/text/text.wxml-->
<!-- 1.text的基本使用 -->
<text>Hello World</text><!-- text标签相当于span标签 行内元素 -->
<text>你好小程序</text>
<text>\nHello World</text><!-- 使用\n换行 -->
<text>\n你好小程序\n</text>

<!-- 2.selectable属性：文本是否可选 -->
<!-- 默认情况下text中的文本长按是不能选中的 -->
<text selectable>Hello Coderwhy\n</text><!-- 写法一(推荐) -->
<text selectable="true">Hello Coderwhy\n</text><!-- 写法二 -->

<!-- 3.space属性：决定文本空格的大小 -->
<text>Hello World\n</text>
<text space="nbsp">Hello World\n</text><!-- nbsp：根据字体设置的空格大小 -->
<text space="ensp">Hello World\n</text><!-- ensp：中文字符空格一半大小 -->
<text space="emsp">Hello World\n</text><!-- emsp：中文字符空格大小 -->

<!-- 4.decode属性：是否解码文本 -->
<text>5 &gt; 3\n</text>
<text decode>5 &gt; 3\n</text>